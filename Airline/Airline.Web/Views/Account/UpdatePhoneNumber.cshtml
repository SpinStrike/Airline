@model Airline.Web.Models.PhoneNumberModel


<div class="content-elements-border table-element-padding table-element-margin text-output-maggin-padding element-list-background">
    <div class="row">
        <div class="col-md-12 text-center">
            @Html.Label("Change phone number")
        </div>
        @using (Html.BeginForm("UpdatePhoneNumber", "Account", new { area = "" }, FormMethod.Post, null))
        {
            <div class="col-md-9">
                <div class="form-group text-left">
                    <span>New phone number</span>
                    @Html.HiddenFor(x => x.Id)
                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.PhoneNumber)
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group text-right button-margin-top">
                    <input type="submit" value="Change" class="btn btn-info  btn-sm" />
                </div>
            </div>
        }
    </div>
</div>