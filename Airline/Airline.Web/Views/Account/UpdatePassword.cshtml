@model Airline.Web.Models.PasswordModel


<div class="content-elements-border table-element-padding table-element-margin text-output-maggin-padding element-list-background">
    <div class="row">
        <div class="col-md-12 text-center">
            @Html.Label("Change password")
        </div>
    </div>
    @using (Html.BeginForm("UpdatePassword", "Account", new { area = "" }, FormMethod.Post, null))
    {
        @Html.HiddenFor(x => x.Id)
        <div class="row">
            <div class="col-md-9">
                <span>New password</span>
                @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control",type = "password" })
                @Html.ValidationMessageFor(x => x.NewPassword)
            </div>
        </div>

        <div class="row">
            <div class="col-md-9">
                <span>Confirm password</span>
                @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", type = "password" })
                @Html.ValidationMessageFor(x => x.ConfirmPassword)
            </div>
            <div class="col-md-3 text-right button-margin-top">
                <input type="submit" value="Change" class="btn btn-info btn-sm" />
            </div>
        </div>
    }
</div>


