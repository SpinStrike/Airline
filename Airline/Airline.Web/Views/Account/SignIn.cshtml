@model Airline.Web.Models.SignInModel
@using Airline.Web.AdditionalExtensions

@{
    ViewBag.Title = "Sign in";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/SignIn.css" />
    <link rel="stylesheet" href="~/Content/Error.css" />
</head>
<body>
    <div class="container">
        <div class="row make-margin-top">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <img src="~/Images/falcon_logo.png" alt="airlineLogo" class="img-fluid center-block" />
            </div>
        </div>
        <div class="row make-margin-top">
            <div class="col-md-4"></div>
            <div class="col-md-4 signIn-block">
                @Html.Label("Please, sign in:", new { @class = "h4" })
                @using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { data_toggle = "validator" }))
                {
                    var error = ViewData.GetErrorMessageByKey("Authorithation error");

                    if (!error.IsEmpty())
                    {
                        <span class="h5 field-validation-error">@error</span>
                    }

                    <div class="form-group">
                        @Html.LabelFor(x => x.Email)
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email", placeholder = "Email"})
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password)
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", placeholder = "Password"  })
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            @Html.CheckBoxFor(x => x.IsRememberMe, new { @class = "form-check-input" })
                            @Html.Label("Remember me?", new { @class = "form-check-label" })
                        </div>
                    </div>

                    <button type="submit" class="btn btn-info">Submit</button>
                }
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
