@model Airline.Web.Areas.Admin.Models.CityCreationModel

@{
    ViewBag.Title = "Add city";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-4"></div>
<div class="col-md-4">
    <div class="text-center" style="margin-bottom:10px">
        <span class="h3">Form of adding a new city</span>
    </div>
    <div class="content-elements-border home-idenx-element-padding"  >
        @using (Html.BeginForm("AddCity", "Creation", new { area = "Admin" }, FormMethod.Post, null))
        {
            <div class="form-group text-center" >
                @Html.LabelFor(x => x.Name,"Input city name that will be added to airline system" , null)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="text-right">
                <input type="submit" value="Add" class="btn btn-info" />
            </div>
        }
    </div>
</div>
<div class="col-md-4"></div>
